{% extends 'layouts/base.html.twig' %}

{% block title %}BlaBlaArticle - Лучший генератор статей{% endblock %}

{% block body %}
    <div class="d-flex" id="wrapper">

        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">BlaBlaArticle</div>
            <div class="list-group list-group-flush">
                <a href="{{ path('app_dashboard') }}" class="list-group-item list-group-item-action {% block dashboard_index %}bg-light{% endblock %}">Рабочий стол</a>
                <a href="{{ path('app_dashboard_create_article') }}" class="list-group-item list-group-item-action {% block dashboard_article %}bg-light{% endblock %}">Создать статью</a>
                <a href="dashboard_history.html"        class="list-group-item list-group-item-action {% block dashboard_history %}bg-light{% endblock %}">История статей</a>
                <a href="{{ path('app_dashboard_subscription') }}"   class="list-group-item list-group-item-action {% block dashboard_subscription %}bg-light{% endblock %}">Подписка</a>
                <a href="{{ path('app_dashboard_profile') }}" class="list-group-item list-group-item-action {% block dashboard_profile %}bg-light{% endblock %}">Профиль</a>
                <a href="dashboard_modules.html"        class="list-group-item list-group-item-action {% block dashboard_modules %}bg-light{% endblock %}">Модули генератора</a>
            </div>
        </div>

        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Скрыть меню</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Показать/Скрыть навигацию">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('app_logout') }}">Выйти</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                <h1 class="mt-4">{% block dashboard_title %}{% endblock %}</h1>
                <div class="row">
                    <div class="{% block dashboard_class %}{% endblock %}">

                    {% if app.session.flashBag.peek('flash_message')|length > 0 %}
                        <div class="alert alert-success" role="alert">
                            {% for message in app.flashes('flash_message') %}
                                <p>{{ message }}</p>
                            {% endfor %}
                        </div>
                    {% endif %}

                    {% block dashboard_content %}{% endblock %}
                    </div>
                </div>

                {% block generated_article %}
                {% endblock %}
            </div>
        </div>

    </div>
{% endblock %}
